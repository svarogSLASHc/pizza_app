<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WelcomeButtonStyle">
        <item name="android:layout_width">@dimen/main_button_width</item>
        <item name="android:layout_height">@dimen/main_button_height</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/input_text_start_margin</item>
        <item name="android:layout_marginBottom">@dimen/input_field_bottom_padding</item>
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textColorHint">@color/color_white</item>
        <item name="android:textSize">@dimen/input_hint_size</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="PizzaTextInputLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/color_white</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextAppearance">@style/TextLabel</item>
        <item name="errorTextAppearance">@style/TextInputLayoutYellow</item>]

    </style>

    <style name="PizzaTextInputTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/color_white</item>
        <item name="android:drawablePadding">@dimen/input_field_icon_margin</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextInputLayoutYellow" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/color_yellow</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>
</resources>
